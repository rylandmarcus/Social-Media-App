<h1>Post Show!</h1>
<a href="/posts">Back to Newsfeed</a>
<a href="/profiles">Back to Profiles</a>
<div>
    <img src="<%= profile.profPic %>" alt="profPic" style="height: 50px; width: 50px;">
    <p><%= profile.firstName %> <%= profile.lastName %></p>
</div>
<br>
<br>
<br>
<div>
    <%= post.body %>
</div>
<br>
<div>
    likes: <%= post.whoHasLiked.length %>
    <% if (hasLiked){%>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <input type="hidden" name="unlike" value="notempty">
            <input type="hidden" name="page" value="posts/<%= post._id %>">
            <input type="submit" value="Unlike">
        </form>
    <% }else{ %>
        <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
            <input type="hidden" name="like" value="notempty">
            <input type="hidden" name="page" value="posts/<%= post._id %>">
            <input type="submit" value="Like">
        </form>
    <% } %>
</div>
<br>
<br>
<% post.comments.forEach((comment, i)=>{ %>
    <p><%= post.commentAuthors[i].firstName %>: <%= comment %></p>
<% }) %>
<form action="/posts/<%= post._id %>?_method=PUT" method="POST">
    <input type="text" name="comments" placeholder="add a comment">
    <input type="submit" value="Comment">
</form>
<br>
<br>
<br>
<br>
<% if (myPost){ %>
    <div>
        <a href="/posts/<%= post._id %>/edit"><button>Edit Post</button></a>
        <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete">
        </form>
    </div>
<% } %>